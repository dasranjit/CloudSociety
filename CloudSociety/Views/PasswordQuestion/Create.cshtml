        <legend>Create Password Question</legend>
        <br />
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                   Password Question :
                </td>
                <td>
                    @Html.EditorFor(model => model.Question)<span class="editor-field"> @Html.ValidationMessageFor(model => model.Question)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.Active) :
                </td>
                <td>
                    @Html.EditorFor(model => model.Active)<span class="editor-field"> @Html.ValidationMessageFor(model => model.Active)</span>
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Create" class="buttton" style="width: 45px; height: 23px;
                        vertical-align: middle;" />
                </td>
            </tr>
        </table>       
    </fieldset>
}
