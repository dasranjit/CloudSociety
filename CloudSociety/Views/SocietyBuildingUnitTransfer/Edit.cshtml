@*==== END ====*@ <span class="SocName">Building : @Model.SocietyBuildingUnit.SocietyBuilding.Building</span>&nbsp;<span
    class="SocName">Unit : @Model.SocietyBuildingUnit.Unit</span>
<br /><br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <fieldset style="width: 650px">
        <legend>Edit Society Building Unit Transfer</legend>
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    Member :
                </td>
                <td>
                    @Html.DropDownList("SocietyMemberID", new SelectList(ViewBag.SocietyMemberList as System.Collections.IEnumerable, "SocietyMemberID", "Member"))
                    @*, "<- Select To Member ->")*@ <span class="editor-field">@Html.ValidationMessageFor(model => model.SocietyMemberID)</span>
                </td>
            </tr>
            <tr>
                <td>
                    Allotment/Transfer Date :
                </td>
                <td>
                    @Html.TextBox("TransferDate", String.Format("{0:dd-MMM-yyyy}", Model.TransferDate), new { @class = "shortWidth" })
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.TransferDate)</span>
                </td>
            </tr>
            <tr>
                <td>
                    Remarks :
                </td>
                <td>
                    @Html.EditorFor(model => model.Remarks)
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.Remarks)</span>
                </td>
            </tr>
            <tr>
                <td>
                    Transfer Fee :
                </td>
                <td>
                     @Html.TextBox("TransferFee", Model.TransferFee, new { @class = "shortWidth" })
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.TransferFee)</span>
                </td>
            </tr>
            <tr>
                <td>
                    Payment Details :
                </td>
                <td>
                    @Html.EditorFor(model => model.PaymentDetails)
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.PaymentDetails)</span>
                </td>
            </tr>
            @if (IsFullAccess)
            {
            <tr align="center">
                <td colspan="2" align="center">
                    <input type="submit" value="Save" class="buttton" style="width: 45px; height: 23px;" />
                </td>
            </tr>
            }
        </table>
        @Html.HiddenFor(model => model.SocietyBuildingUnitTransferID)
        @Html.HiddenFor(model => model.SocietyBuildingUnitID)
        @Html.HiddenFor(model => model.uEndDate)
        @Html.HiddenFor(model => model.CreatedByID)
        @Html.HiddenFor(model => model.CreatedOn)
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index", new { societyBuildingUnitID = Model.SocietyBuildingUnitID, societySubscriptionID = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
</div>
