@model IEnumerable<CloudSocietyEntities.DocumentType>
@{
    ViewBag.Title = "Document Type";
    ViewBag.Header = "Document Type List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="buttton" style="width: 65px;">
    @Html.ActionLink("Create New", "Create")
</div>
<br />
@if (Model.Count() > 0)
{
    var grid = new WebGrid(Model, canPage: true, canSort: true, rowsPerPage: 10);
    grid.Pager(WebGridPagerModes.NextPrevious);       

    @grid.GetHtml(tableStyle: "table", footerStyle: "webgrid-footer", rowStyle: "TableRow", alternatingRowStyle: "altTableRow",
    columns: grid.Columns(
    grid.Column("", "", format: @<text><div style='width: 70px'>@Html.ActionLink("Edit", "Edit", new { id = item.DocumentTypeID, backUrl = grid.GetPageUrl(grid.PageIndex) }, new { @class = "EditDelete" }) | @Html.ActionLink("Delete", "Delete", new { id = item.DocumentTypeID, backUrl = grid.GetPageUrl(grid.PageIndex) }, new { @class = "EditDelete" })</div></text>, canSort: false),
    grid.Column("DocumentType1", "Document Type", format: @<text><div style='width: 300px'>@item.DocumentType1</div></text>),
    grid.Column("Active", "Active", canSort: false, format: @<text><div style='width: 60px'>
    @if (item.Active == true)
    {<text><center><img src="@Url.Content("~/Content/Images/tick-green.png")"  /></center></text> }
        else{<text><center><img src="@Url.Content("~/Content/Images/Copy of cancel-icon.png")"  /></center></text>}
    </div></text>)))
}
else
{
    <table border="0" cellpadding="2" cellspacing="0" class="table">
        <tr class="TableRow">
            <td>Currently there are no Records
            </td>
        </tr>
    </table>
}