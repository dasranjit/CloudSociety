                    @Html.TextBox("Particulars", null, new { @class = "maxWidth" })
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.Particulars)</span>
                </td>
            </tr>
            <tr>
                <td>
                    Principal Adjusted :
                </td>
                <td>
                    @Html.TextBox("PrincipalAdjusted", null, new { @class = "shortWidth" })
