@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <br />
    <fieldset style="width: 600px">
    <legend>Edit Society Collection Reverse Receipt</legend>
        <table>
            <tr>
                <td>
                    Bill Abbreviation :
                </td>
                <td>
                    @Html.DropDownList("BillAbbreviation", new SelectList(ViewBag.BillAbbreviationList as System.Collections.IEnumerable, "BillAbbreviation", "BillAbbreviation"))
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.BillAbbreviation)</span>
                </td>
            </tr>
            <tr>
                <td>
                    Building Unit :
                </td>
                <td>
                    @Html.DropDownList("SocietyBuildingUnitID", new SelectList(ViewBag.SocietyBuildingUnitList as System.Collections.IEnumerable, "SocietyBuildingUnitID", "BuildingUnit"))
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.SocietyBuildingUnitID)</span>
                </td>
            </tr>
            <tr>
                <td>
                    Society Member :
                </td>
                <td>
                    @Html.DropDownList("SocietyMemberID", new SelectList(ViewBag.SocietyMemberList as System.Collections.IEnumerable, "SocietyMemberID", "Member"))
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.SocietyMemberID)</span>
                </td>
            </tr>
            <tr>
                <td>
                    Reverse Date :
                </td>
                <td>
                    @Html.TextBox("ReversalDate", string.Format("{0:dd-MMM-yyyy}", Model.ReversalDate), new { @class = "shortWidth", onkeypress="return false;", onkeydown="return false;" })
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.ReversalDate)</span>
                </td>
            </tr>
            <tr>
                <td>
                    Collection Receipt :
                </td>
