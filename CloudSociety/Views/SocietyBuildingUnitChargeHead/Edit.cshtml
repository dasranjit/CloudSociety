@model CloudSocietyEntities.SocietyBuildingUnitChargeHead
@{
    ViewBag.Title = "Edit Society Building Unit Charge Head";
    ViewBag.Header = " Society Building Unit Charge Head";
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";
    var societyBuildingUnit = (CloudSocietyEntities.SocietyBuildingUnit)ViewBag.SocietyBuildingUnit;
    bool IsFullAccess = new CloudSociety.Controllers.AppInfoController().IsFullAccess();      
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<span class="SocName">Building : @societyBuildingUnit.SocietyBuilding.Building</span>&nbsp;<span
    class="SocName">Unit : @societyBuildingUnit.Unit</span>
<br /><br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <fieldset style="width: 500px">
        <legend>Edit Society Building Unit ChargeHead</legend><br />
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    Charge Head :
                </td>
                <td>
                    @Html.DropDownList("ChargeHeadID", new SelectList(ViewBag.SocietyChargeHeadList as System.Collections.IEnumerable, "ChargeHeadID", "ChargeHead"), "<- Select Charge Head ->")
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.ChargeHeadID)</span>
                </td>
            </tr>
             <tr>
                <td>
                    Rate :
                </td>
                <td>
                    @Html.TextBox("Rate", Model.Rate, new { @class = "shortWidth" })@*@Html.EditorFor(model => model.Rate)*@
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.Rate)</span>
                </td>
            </tr>
            @if (IsFullAccess)
            {
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Save" class="buttton" style="width: 45px; height: 23px;" />
                </td>
            </tr>
            }
        </table>
        @Html.HiddenFor(model => model.SocietyBuildingUnitChargeHeadID)
        @Html.HiddenFor(model => model.SocietyBuildingUnitID)
        @Html.HiddenFor(model => model.CreatedByID)
        @Html.HiddenFor(model => model.CreatedOn)
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index", new { societyBuildingUnitID = Model.SocietyBuildingUnitID, societySubscriptionID = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
</div>
