            </tr>
            <tr>
                <td>
                    EMail Id :
                </td>
                <td>
                    @Html.DisplayFor(model => model.EMailId)
                </td>
            </tr>
            @if (IsFullAccess)
            {
            <tr>
                <td align="center" colspan="2">
                    <input type="submit" value="Delete" class="buttton" style="width: 45px; height: 23px;" />
                </td>
            </tr>
            }
        </table>
    </fieldset>
    @Html.HiddenFor(m => m.SocietyMemberJointHolderID)
    @Html.Hidden("societySubscriptionID", (Guid)ViewBag.SocietySubscriptionID)
}
@Html.ActionLink("Back to List", "Index", new { societyMemberID = Model.SocietyMemberID, societySubscriptionID = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
