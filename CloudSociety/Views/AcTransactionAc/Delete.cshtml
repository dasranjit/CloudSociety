@model CloudSocietyEntities.AcTransactionAc
@{
    ViewBag.Title = "Delete Account";
    ViewBag.Header = "Account";
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";
    bool IsFullAccess = new CloudSociety.Controllers.AppInfoController().IsFullAccess();   
}
<div class="LabelDel">
    Are you sure you want to delete this?</div>
<br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    
    <fieldset style="width: 500px">
        <legend>Delete Account</legend>
        <br />
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    Account Head :
                </td>
                <td>
                    @Model.AcHead.Name
                </td>
            </tr>
            <tr>
                <td>
                    Particulars :
                </td>
                <td>
                    @Model.Particulars
                </td>
            </tr>
            <tr>
                <td>
                    Amount :
                </td>
                <td>
                    @Model.Amount
                </td>
            </tr>
            @if (IsFullAccess)
            {
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Delete" class="buttton" style="width: 45px; height: 23px;" />
                </td>
            </tr>
            }
        </table>
    </fieldset>  
    @Html.HiddenFor(m => m.AcTransactionAcID)
    @Html.HiddenFor(m => m.AcTransactionID)
    @Html.HiddenFor(m => m.SocietyID)
    @Html.HiddenFor(m => m.Nature)
    @Html.HiddenFor(m => m.AcHeadID)
    @Html.HiddenFor(m => m.DrCr)
    @Html.HiddenFor(m => m.Amount)
    @Html.HiddenFor(m => m.Particulars)
    @Html.HiddenFor(m => m.Reconciled)  
    @Html.HiddenFor(m => m.CreatedByID)
    @Html.HiddenFor(m => m.CreatedOn)
    @Html.HiddenFor(m => m.UpdatedByID)
    @Html.HiddenFor(m => m.UpdatedOn)    
}
<div>
    @Html.ActionLink("Back to List", "Index", new { AcTransactionID = Model.AcTransactionID }, new { @class = "EditDelete" })
</div>
           
