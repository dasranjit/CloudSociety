@model CloudSocietyEntities.AcTransactionAc
@{
    ViewBag.Title = "Create Account";
    ViewBag.Header = " Account";
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";
    var AcTransaction = (CloudSocietyEntities.AcTransaction)ViewBag.AcTransaction;
    bool IsFullAccess = new CloudSociety.Controllers.AppInfoController().IsFullAccess();
}
<link rel="stylesheet" type="text/css" href="http://cdn.webrupee.com/font" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<span class="SocName">Document Type : @(AcTransaction.DocType == "CP" ? "Cash Payment" : (AcTransaction.DocType == "CR" ? "Cash Receipt" : (AcTransaction.DocType == "BP" ? "Bank Payment" : (AcTransaction.DocType == "BR" ? "Bank Receipt" : (AcTransaction.DocType == "PB" ? "Purchase Bill" : (AcTransaction.DocType == "EB" ? "Expense Bill" : (AcTransaction.DocType == "SB" ? "Society Bill" : (AcTransaction.DocType == "JV" ? "Journal Voucher" : ""))))))))</span>&nbsp;
&nbsp; &nbsp;
@{
    decimal DrTotal = AcTransaction.DrAmount ?? 0;
    decimal CrTotal = AcTransaction.CrAmount ?? 0;
    decimal DiffTotal = 0;
    bool Dr = false, Cr = false;
    <span class="SocName">Balance Amount : <span class="WebRupee">Rs </span>
        @if (DrTotal > CrTotal)
        {
            DiffTotal = DrTotal - CrTotal;   
            @Math.Abs(DiffTotal) <span>Cr.</span>
            Cr = true;            
        }
        else if (DrTotal < CrTotal)
        {
            DiffTotal = CrTotal - DrTotal;   
            @Math.Abs(DiffTotal) <span>Dr.</span>
            Dr = true;
        }
        else
        {
            DiffTotal = CrTotal - DrTotal;   
            @Math.Abs(DiffTotal) 
        }</span>
}
<br />
<br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <fieldset style="width: 600px">
        <legend>Create Account </legend>
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    @if (AcTransaction.DocType == "CP" || AcTransaction.DocType == "CR")
                    {
                        <text>Cash Account :</text>
                    }
                    else if (AcTransaction.DocType == "BR" || AcTransaction.DocType == "BP")
                    {
                        <text>Bank Account :</text>
                    }
                    else
                    {
                        <text>Account Head :</text>
                    }
                </td>
                <td>
                    @Html.DropDownList("AcHeadID", new SelectList(ViewBag.AcHeadList as System.Collections.IEnumerable, "AcHeadID", "Name"), "<- Select Account Head->")
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.AcHeadID)</span>
                </td>
            </tr>
            @if (AcTransaction.DocType == "JV" || AcTransaction.DocType == "OP")
            {
                <tr>
                    <td>
                        Debit : @Html.RadioButton("DrCr", "D", Dr )
                    </td>
                    <td>
                        Credit : @Html.RadioButton("DrCr", "C",Cr)
                        <span class="editor-field">@Html.ValidationMessageFor(model => model.DrCr)</span>
                    </td>
                </tr>}
            <tr>
                <td>
                    Particulars :
                </td>
                <td>
                    @Html.TextBox("Particulars", AcTransaction.Particulars, new { @class = "maxWidth" })
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.Particulars)</span>
                </td>
            </tr>
            <tr>
                <td>
                    Amount :
                </td>
                <td>
                    @Html.TextBox("Amount", DiffTotal, new { @class = "shortWidth" })
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.Amount)</span>
                </td>
            </tr>
            @*<tr>
                <td>
                    Reconciled On :
                </td>
                <td>
                    @Html.TextBox("Reconciled", null, new { @class = "shortWidth" })
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.Reconciled)</span>
                </td>
            </tr>*@
             @if (IsFullAccess)
             {
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Create" class="buttton" style="width: 45px; height: 23px;" />
                </td>
            </tr>
             }
        </table>
    </fieldset>
    @Html.Hidden("AcTransactionID", AcTransaction.AcTransactionID)
    @Html.Hidden("Nature", "O")    
if (AcTransaction.DocType == "CP" || AcTransaction.DocType == "BP" || AcTransaction.DocType == "PB" || AcTransaction.DocType == "EB")
{      
    @Html.Hidden("DrCr", "D");
}
if (AcTransaction.DocType == "CR" || AcTransaction.DocType == "BR" || AcTransaction.DocType == "SB")
{
    @Html.Hidden("DrCr", "C");
}
    @Html.Hidden("SocietyID", AcTransaction.SocietyID);
}
<div>
    @Html.ActionLink("Back to List", "Index", new { AcTransactionID = AcTransaction.AcTransactionID }, new { @class = "EditDelete" })
</div>
