@model CloudSocietyEntities.Bank
@{
    ViewBag.Title = "Delete Bank";
    ViewBag.Header = "Bank";   
}
<div class="LabelDel">
    Are you sure you want to delete this?</div>
<br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <fieldset style="width: 600px">
        <legend>Details Of Bank</legend>
        <br />
        <table >
            <tr>
                <td>
                    Bank Name :
                </td>
                <td>
                    @Model.Name
                </td>
            </tr>
            <tr>
                <td>
                    Active :
                </td>
                <td>
                    @if (Model.Active == true)
                    { <text>
                        <img src="@Url.Content("~/Content/Images/tick-green.png")"  />
                        </text> }
                    else
                    { <text>
                        <img src="@Url.Content("~/Content/Images/Copy of cancel-icon.png")" /></text> }
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Delete" class="buttton" style="width: 45px; height: 23px;
                        vertical-align: middle;" />
                </td>
            </tr>
        </table>
    </fieldset>
}
<br />
