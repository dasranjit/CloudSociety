@model CloudSocietyEntities.SubscriptionInvoice
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Print Challan</title>
    <link  rel="icon" href="@Url.Content("~/Content/Images/c1-favicon.gif")" type="image/ico"/>
    <link href="@Url.Content("~/Content/cloud.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="http://cdn.webrupee.com/font" />    
</head>
<body onload="javascript:window.print()">
    <table style="border: 1px solid #000000; width: 530px;">
        <caption style="font-weight: bold">
            PAYMENT CHALLAN</caption>
        <tr>
            <td>
                Pay Infavour Of
            </td>
        </tr>
        <tr>
            <td>
                <table style="border: 1px solid #CCCCCC; width: 520px;">
                    <tr>
                        <td>
                            A/c Name :
                        </td>
                        <td>
                            <strong>Cloud Computing TechSolutions Pvt. Ltd.</strong>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Bank :
                        </td>
                        <td>
                            @ViewBag.Bank
                        </td>
                    </tr>
                    <tr>
                        <td>
                            A/c No :
                        </td>
                        <td>
                            @ViewBag.AcNo
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Branch :
                        </td>
                        <td>
                            @ViewBag.Branch
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                Invoice Details
            </td>
        </tr>
        <tr>
            <td>
                <table style="border: 1px solid #CCCCCC; width: 520px;">
                    <tr>
                        <td width="100px">
                            Invoice No :
                        </td>
                        <td>
                            @Model.InvoiceNo
                        </td>
                        <td>
                            Invoice Amount :
                        </td>
                        <td>
                            <span class="WebRupee">Rs </span>@Model.InvoiceAmount
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Invoice Date :
                        </td>
                        <td>
                            @String.Format("{0:dd-MMM-yyyy}", Model.InvoiceDate)
                        </td>
                        <td>
                            Due Date :
                        </td>
                        <td>
                            @String.Format("{0:dd-MMM-yyyy}", Model.DueDate)
                        </td>
                    </tr>
                    <tr>
                        @if (Model.SubscriberID != null)
                        {
                            <td width="50px">
                                Name :
                            </td> 
                            <td colspan="3">
                                <strong>&nbsp;&nbsp; @Model.Subscriber.Name</strong>
                            </td>         
                        }
                        else
                        {      
                            <td width="100px">
                                Society Name :
                            </td> 
                            <td colspan="3">
                                <strong>&nbsp;&nbsp; @Model.Society.Name</strong>
                            </td>                                           
                        }
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                Please fill the following
            </td>
        </tr>
        <tr>
            <td>
                <table style="border: 1px solid #CCCCCC; width: 520px;">
                    <tr>
                        <td>
                            Cheque No :
                        </td>
                        <td>
                            ..................................................................................................
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Cheque Date :
                        </td>
                        <td>
                            ..................................................................................................
                        </td>
                    </tr>
                     <tr>
                        <td> 
                            Cheque Amount :
                        </td>
                        <td>
                            ..................................................................................................
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Bank :
                        </td>
                        <td>
                            ..................................................................................................
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Branch :
                        </td>
                        <td>
                            ..................................................................................................
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Drawer :
                        </td>
                        <td>
                            ..................................................................................................
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Deposited By :
                        </td>
                        <td>
                            ..................................................................................................
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Deposited On :
                        </td>
                        <td>
                            ..................................................................................................
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                &nbsp;
            </td>
        </tr>
    </table>
</body>
</html>
