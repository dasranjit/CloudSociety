@model IEnumerable<CloudSocietyEntities.SocietySpecialBill>
@{
    ViewBag.Title = "Society Special Bill";
    ViewBag.Header = "Society Special Bill List";
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";
}
<div class="buttton" style="width: 65px;">
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.SocietySubscriptionID })</div>
<br />
<table border="0" cellpadding="2" cellspacing="0" class="table">
    @{
        int Count = 1;
    }
    @foreach (var item in Model)
    {
        if (Count == 1)
        {
        <tr>
            <th>
            </th>
            <th>
                Unit Type
            </th>
            <th>
                Building Unit
            </th>
            <th>
                From Date
            </th>
            <th>
                To Date
            </th>
        </tr>
        }
        <tr @if ((Count % 2) == 0)
            { <text> class="TableRow" </text> }
            else
            { <text> class="altTableRow" </text>} >
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SocietySpecialBillID, societySubscriptionID = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
                |
                @Html.ActionLink("Delete", "Delete", new { id = item.SocietySpecialBillID, societySubscriptionID = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
                |
                @Html.ActionLink("Charge Head", "Index", "SocietySpecialBillChargeHead", new { societySpecialBillID = item.SocietySpecialBillID, societySubscriptionID = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
                |
                @Html.ActionLink("Unit", "Index", "SocietySpecialBillUnit", new { societySpecialBillID = item.SocietySpecialBillID, societySubscriptionID = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitType.Type)
            </td>
            <td>
                @if( item.SocietyBuildingUnitID != null)
                {
                    <span>@item.SocietyBuildingUnit.SocietyBuilding.Building - @item.SocietyBuildingUnit.Unit</span>
                }
            </td>
            <td>
                @String.Format("{0:dd-MMM-yyyy}", item.FromDate)
            </td>
            <td>
                @String.Format("{0:dd-MMM-yyyy}", item.ToDate)
            </td>
        </tr>
                Count = Count + 1;
    }
    @if (Count == 1)
    {<tr class="TableRow">
        <td>
            Currently there are no Records
        </td>
    </tr> }
</table>
<br />
<div>
    @Html.ActionLink("Back", "Menu", "SocietySubscription", new { id = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
</div>
