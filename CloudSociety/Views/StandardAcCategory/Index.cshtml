@model IEnumerable<CloudSocietyEntities.StandardAcCategory>
@{
    ViewBag.Title = "Account Category";
    ViewBag.Header = "Account Category List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="buttton" style="width: 65px;">
    @Html.ActionLink("Create New", "Create")</div>
<br />
<table border="0" cellpadding="2" cellspacing="0" class="table">
    @{
        int Count = 1;
    }
    @foreach (var item in Model)
    {
        if (Count == 1)
        {
        <tr>
            <th>
            </th>
            <th>
                Category
            </th>
            <th>
                Dr/Cr
            </th>
            <th>
                Nature
            </th>
            <th>
                Sequence
            </th>
        </tr>
        }

        <tr @if ((Count % 2) == 0)
            { <text> class="TableRow" </text> }
            else
            { <text> class="altTableRow" </text>} >
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID }, new { @class = "EditDelete" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID }, new { @class = "EditDelete" })
            </td>
            <td>
                @item.Category
            </td>
            <td>
                @(item.DrCr == "D" ? "Debit" : (item.DrCr == "C" ? "Credit" : ""))
            </td>
            <td>
                @(item.Nature == "I" ? "Income Expenditure" : (item.Nature == "B" ? "Balance Sheet" : ""))
            </td>
            <td>
                @item.Sequence
            </td>
        </tr>
    
           Count = Count + 1;

    }
    @if (Count == 1)
    {<tr class="TableRow">
        <td>
            Currently there are no Records
        </td>
    </tr> }
</table>
