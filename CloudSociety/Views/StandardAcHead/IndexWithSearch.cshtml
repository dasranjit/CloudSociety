@model IEnumerable<CloudSocietyEntities.StandardAcHead>
@{
    ViewBag.Title = "Account Head";
    ViewBag.Header = "Account Head List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using (Html.BeginForm("IndexWithSearch", "StandardAcHead", FormMethod.Get))
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <fieldset style="width: 800px">
        <legend>Search</legend>
        <table>            
            <tr>
                <td>
                    By Account Head :
                </td>
                <td>
                    @Html.TextBox("AcHead", null, new { @class = "mediumWidth" })                    
                </td>
               
                <td>
                    By Sub-Category :
                </td>
                <td>
                    @Html.TextBox("SubCategory", null, new { @class = "mediumWidth" })                    
                </td>
               
                <td align="center">                   
                     &nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="submit" value="Search" class="buttton" style="width: 45px; height: 23px;
                        vertical-align: middle;" />
                </td>
                </tr>
                  
        </table>
    </fieldset>    
}
<div class="buttton" style="width: 65px;">
    @Html.ActionLink("Create New", "Create")</div>
<br />
@if (Model.Count() > 0)
{
    var grid = new WebGrid(Model, canPage: true, defaultSort: "AcHead", canSort: true, rowsPerPage: 10);
    grid.Pager(WebGridPagerModes.NextPrevious);

    WebGridColumn[] columnSet = new WebGridColumn[7];
    columnSet[0] = grid.Column("", "", format: @<text><div style='width: 70px'> @Html.ActionLink("Edit", "Edit", new { id = item.AcHeadID, backUrl = grid.GetPageUrl(grid.PageIndex) }, new { @class = "EditDelete" }) | @Html.ActionLink("Delete", "Delete", new { id = item.AcHeadID, backUrl = grid.GetPageUrl(grid.PageIndex) }, new { @class = "EditDelete" })</text>, canSort: false);
    columnSet[1] = grid.Column("AcHead", "Account Head", @<text><div style='width :300px'>@item.AcHead</div></text>);
    columnSet[2] = grid.Column("StandardAcSubCategory.SubCategory", "Sub-Category", format: @<text><div style='width: 260px'> @item.StandardAcSubCategory.SubCategory </div></text>);
    columnSet[3] = grid.Column("Sequence", "Sequence");
    columnSet[4] = grid.Column("Nature", "Nature", format: @<text><div style='width: 100px'> @(item.Nature == "C" ? "Cash" : (item.Nature == "B" ? "Bank" : (item.Nature == "S" ? "Creditor" : (item.Nature == "D" ? "Debtor" : (item.Nature == "T" ? "TDS" : (item.Nature == "F" ? "Year End Closing Transaction" : ""))))))</div></text>);
    columnSet[5] = grid.Column("TDSCategoryID", "TDSCategory", format: @<text><div style='width: 100px'> @(item.TDSCategoryID != null ? item.TDSCategory.Category : "")</div></text>);
    columnSet[6] = grid.Column("TDSCompany", "TDSCompany", format: @<text>@if (item.TDSCompany == true)
                                                                          {<text><center><img src="@Url.Content("~/Content/Images/tick-green.png")"  /></center></text> }</text>, canSort: false);    
    @grid.GetHtml(tableStyle: "table", footerStyle: "webgrid-footer", rowStyle: "TableRow", alternatingRowStyle: "altTableRow", columns: grid.Columns(columnSet))    
}
else
{
    <table> 
          <tr class="TableRow">
            <td>
                No Record Found.
            </td>
        </tr> 
   </table>  
}
