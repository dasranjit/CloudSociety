<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.9/jquery-ui.js" type="text/javascript"></script>
<link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.9/themes/blitzer/jquery-ui.css" rel="stylesheet" type="text/css" />
<script type="text/javascript">
    $(function () {
        function displayImage() {
            $('#objPDF').hide();
            $("#imgPF").show();
            input = $('#fileDoc')[0];
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imgPF').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        function displayPDF() {
            $('#objPDF').show();
            $("#imgPF").hide();
            input = $('#fileDoc')[0];
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#objPDF').attr('data', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        $("#btnPreviewFile").click(function () {
            //var filePath = "";
            var fileNamePF = "";
            if ($('#fileDoc')[0].files && $('#fileDoc')[0].files[0]) {
                fileNamePF = $('#fileDoc')[0].files[0].name;
                $("#dialogPF").dialog({
                    modal: true,
                    title: fileNamePF,
                    width: 830,
                    height: 600,
                    open: function () {
                        var extPF = fileNamePF.split('.')[1];
                        var objectPF = "";
                        if (extPF.toLowerCase() == "pdf") {
                            //var reader = new FileReader();
                            //reader.onload = function (e) {
                            //    objectPF = "<object data=\"" + e.target.result + "\" type=\"application/" + extPF + "\" width=\"800px\" height=\"530px\">";
                            //    objectPF += "</object>";
                            //}
                            //reader.readAsDataURL($('#fileDoc')[0].files[0]);
                            //$("#dialogPF").html(objectPF);
                            displayPDF();
                        }
                        else {
                            displayImage();
                        }
                    }
                });
            }
        });
    });
</script>
<input id="btnPreviewFile" type="button" value="Preview File" />
<div id="dialogPF" style="display: none">
    <img id="imgPF" src="#" alt="Preview image" width="800px"/>
    <object id="objPDF" data="" type="application/pdf"  width="800px" height="530px"/>
</div>
