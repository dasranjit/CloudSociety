@model CloudSocietyEntities.AcCategory
@{
    ViewBag.Title = "Edit Account Category";
    ViewBag.Header = "Account Categoty";
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";
    bool IsFullAccess = new CloudSociety.Controllers.AppInfoController().IsFullAccess();   
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <fieldset style="width: 450px">
        <legend>Edit Account Category</legend>
        <br />
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.Category) :
                </td>
                <td>
                    @Html.TextBox("Category", Model.Category, new { @class = "maxWidth" })
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.Category)</span>
                </td>
            </tr>
            <tr>
                <td>
                    DrCr :
                </td>
                <td>
                    @Html.DropDownList("DrCr", ViewBag.DrCrList as SelectList)
                    @*@Html.EditorFor(model => model.DrCr)*@ <span class="editor-field">@Html.ValidationMessageFor(model => model.DrCr)</span>
                </td>
            </tr>
            <tr>
                <td>
                    Nature :
                </td>
                <td>
                    @Html.DropDownList("Nature", ViewBag.NatureList as SelectList)
                    @*@Html.EditorFor(model => model.Nature)*@ <span class="editor-field">@Html.ValidationMessageFor(model => model.Nature)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.Sequence):
                </td>
                <td>
                    @Html.TextBox("Sequence", Model.Sequence, new { @class = "shortWidth" })
                    @*@Html.EditorFor(model => model.Sequence)*@ <span class="editor-field">@Html.ValidationMessageFor(model => model.Sequence)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    Active :
                </td>
                <td>
                    @Html.CheckBox("Active") @*@Html.EditorFor(model => model.Active)*@ <span class="editor-field">
                        @Html.ValidationMessageFor(model => model.Active)</span>
                </td>
            </tr>
            @if (IsFullAccess)
            {
                <tr>
                    <td colspan="2" align="center">
                        <input type="submit" value="Save" class="buttton" style="width: 45px; height: 23px;
                            vertical-align: middle;" />
                    </td>
                </tr>
            }
        </table>
        @Html.HiddenFor(model => model.CategoryID)
        @Html.HiddenFor(model => model.SocietyID)
        @Html.HiddenFor(model => model.CreatedByID)
        @Html.HiddenFor(model => model.CreatedOn)
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index", new { id = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
</div>
