@model IEnumerable<CloudSocietyEntities.SocietyChargeHead>
@{
    ViewBag.Title = "Charge Head";
    ViewBag.Header = "Charge Head List";
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";
}
<div class="buttton" style="width: 65px;">
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.SocietySubscriptionID })</div>
<br />
@{
    var grid = new WebGrid(Model, canPage: true, defaultSort: "Sequence", canSort: true, rowsPerPage: 10);
    grid.Pager(WebGridPagerModes.NextPrevious);
    WebGridColumn[] columnSet = new WebGridColumn[8];
    columnSet[0] = grid.Column("", "",@<text> <div style="width : 70px">@Html.ActionLink("Edit", "Edit", new { id = item.ChargeHeadID, societySubscriptionID = ViewBag.SocietySubscriptionID, backUrl = grid.GetPageUrl(grid.PageIndex) }, new { @class = "EditDelete" }) | @Html.ActionLink("Delete", "Delete", new { id = item.ChargeHeadID, societySubscriptionID = ViewBag.SocietySubscriptionID, backUrl = grid.GetPageUrl(grid.PageIndex) }, new { @class = "EditDelete" })</div></text>);
    columnSet[1] = grid.Column("ChargeHead", "Charge Head", @<text><div style="width : 230px">@item.ChargeHead</div></text>);
    columnSet[2] = grid.Column("ChargeInterest", "Charge Interest", @<text>@if (item.ChargeInterest == true){<text><center><img src="@Url.Content("~/Content/Images/tick-green.png")"  /></center></text> }</text>);
    columnSet[3] = grid.Column("AcHead.Name", "Account Head", @<text> <div style="width : 200px">@(item.AcHeadID == null ? "" : item.AcHead.Name) </div></text>);
    columnSet[4] = grid.Column("Nature", "Nature", @<text><div style="width : 150px"> @(item.Nature == "C" ? "Construction Cost Basis" : (item.Nature == "A" ? "Per Area" : (item.Nature == "L" ? "Late Payment Penalty" : (item.Nature == "E" ? "Early Payment Discount" : (item.Nature == "I" ? "Interest" : (item.Nature == "T" ? "Tax" : ""))))))</div></text>);
    columnSet[5] = grid.Column("Rate", "Rate", @<text><div style="text-align : right; width : 50px"> @(item.Rate != null ? String.Format("{0:00}", item.Rate) : "")</div></text>);
    columnSet[6] = grid.Column("Sequence", "Sequence");
    columnSet[7] = grid.Column("BillAbbreviation", "Bill Abbreviation"); 
}
@grid.GetHtml(tableStyle: "table", footerStyle: "webgrid-footer", rowStyle: "TableRow", alternatingRowStyle: "altTableRow", columns: grid.Columns(columnSet))
<br />
<div>
    @Html.ActionLink("Back ", "Menu", "SocietySubscription", new { id = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
</div>