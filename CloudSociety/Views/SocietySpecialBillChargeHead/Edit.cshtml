@model CloudSocietyEntities.SocietySpecialBillChargeHead
@{
    ViewBag.Title = "Edit Special Bill Charge Head";
    ViewBag.Header = "Special Bill Charge Head";
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";
    bool IsFullAccess = new CloudSociety.Controllers.AppInfoController().IsFullAccess();
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<br />
<br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request") 
    <fieldset style="width: 450px">
        <legend>Special Bill Charge Head</legend>
        <br />
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    @Html.Label("Charge Head :")
                </td>
                <td>
                    @Html.DropDownList("ChargeHeadID", new SelectList(ViewBag.SocietyChargeHeadList as System.Collections.IEnumerable, "ChargeHeadID", "ChargeHead"), "<- Select Charge Head ->")
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.ChargeHeadID)</span>
                </td>
            </tr>
            <tr>
                <td >
                    @Html.LabelFor(model => model.Rate) :
                </td>
                <td >
                    @Html.TextBox("Rate", Model.Rate, new { @class = "shortWidth" })
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.Rate)</span>
                </td>
            </tr>
            @if (IsFullAccess)
            {
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Save" class="buttton" style="width: 45px; height: 23px;" />
                </td>
            </tr>
            }
        </table>
        @Html.HiddenFor(model => model.SocietySpecialBillChargeHeadID)
        @Html.HiddenFor(model => model.SocietySpecialBillID)
        @Html.HiddenFor(model => model.CreatedByID)
        @Html.HiddenFor(model => model.CreatedOn)
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index", new { societySpecialBillID = Model.SocietySpecialBillID, societySubscriptionID = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
</div>
