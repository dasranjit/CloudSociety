@model CloudSocietyEntities.SocietyPayMode
@{
    ViewBag.Title = "Edit Society Pay Mode";
    ViewBag.Header = " Society Pay Mode";
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";
    bool IsFullAccess = new CloudSociety.Controllers.AppInfoController().IsFullAccess();
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <fieldset style="width: 500px">
        <legend>Edit Pay Mode</legend>
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    Pay Mode Code:
                </td>
                <td>
                    @Model.PayModeCode
                </td>
            </tr>
            <tr>
                <td>
                    Pay Mode :
                </td>
                <td>
                    @Html.TextBox("PayMode", Model.PayMode, new { @class = "shortWidth" })
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.PayMode)</span>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.AskDetails) :
                </td>
                <td>
                    @Html.CheckBox("AskDetails", Model.AskDetails) @* @Html.EditorFor(model => model.AskDetails)*@
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.AskDetails)</span>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Active) :
                </td>
                <td>
                    @Html.CheckBox("Active", Model.Active) @* @Html.EditorFor(model => model.Active)*@
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.Active)</span>
                </td>
            </tr>
            <tr>
                <td>
                    Account Head :
                </td>
                <td>
                    @Html.DropDownList("AcHeadID", new SelectList(ViewBag.AcHeadList as System.Collections.IEnumerable, "AcHeadID", "Name"))
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.AcHeadID)</span>
                </td>
            </tr>
            @if (IsFullAccess)
            {
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Save" class="buttton" style="width: 45px; height: 23px;" />
                </td>
            </tr>
            }
        </table>
        @Html.HiddenFor(model => model.PayModeCode)
        @Html.HiddenFor(model => model.SocietyID)
        @Html.HiddenFor(model => model.CreatedByID)
        @Html.HiddenFor(model => model.CreatedOn)
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index", new { id = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
</div>
