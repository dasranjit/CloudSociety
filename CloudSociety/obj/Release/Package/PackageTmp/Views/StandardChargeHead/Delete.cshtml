@model CloudSocietyEntities.StandardChargeHead
@{
    ViewBag.Title = "Delete Standard Charge Head";
    ViewBag.Header = "Standard Charge Head";    
}
<div class="LabelDel">
    Are you sure you want to delete this?</div>
<br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    @Html.HiddenFor(model => model.ChargeHeadID)
    <fieldset style="width: 500px">
        <legend>Standard Charge Head Details</legend>
        <br />
        <table>
            <tr>
                <td class="editor-label">
                    Sequence :
                </td>
                <td>
                    @Model.Sequence
                    @Html.HiddenFor(model => model.Sequence)
                </td>
            </tr>
            <tr>
                <td>
                    Charge Head :
                </td>
                <td>
                    @Model.ChargeHead
                    @Html.HiddenFor(model => model.ChargeHead)
                </td>
            </tr>
            <tr>
                <td>
                    Charge Interest :
                </td>
                <td>
                    @Model.ChargeInterest
                    @Html.HiddenFor(model => model.ChargeInterest)
                </td>
            </tr>
            <tr>
                <td>
                    Account Head :
                </td>
                <td>
                    @(Model.StandardAcHead != null ? Model.StandardAcHead.AcHead : "")
                    @Html.HiddenFor(model => model.AcHeadID)
                </td>
            </tr>
            <tr>
                <td>
                    Nature :
                </td>
                <td>
                    @(Model.Nature == "C" ? "Construction Cost Basis" : (Model.Nature == "A" ? "Per Area" : (Model.Nature == "L" ? "Late Payment Penalty" : (Model.Nature == "E" ? "Early Payment Discount" : (Model.Nature == "I" ? "Interest" : (Model.Nature == "T" ? "Tax" : ""))))))
                    @Html.HiddenFor(model => model.Nature)
                </td>
            </tr>
            <tr>
                <td align="center" colspan="2">
                    <input type="submit" value="Delete" class="buttton" style="width: 45px; height: 23px;
                        vertical-align: middle;" />
                </td>
            </tr>
        </table>
    </fieldset>
    @Html.HiddenFor(model => model.CreatedByID)
    @Html.HiddenFor(model => model.CreatedOn)
    @Html.HiddenFor(model => model.UpdatedByID)
    @Html.HiddenFor(model => model.UpdatedOn)
}
<br />
<div>
    <a href="@ViewBag.BackUrl" class="EditDelete">Back to List</a>
</div>
