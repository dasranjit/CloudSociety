@model IEnumerable<CloudSocietyEntities.StandardChargeHead>
@{
    ViewBag.Title = "Standard Charge Head";
    ViewBag.Header = "Standard Charge Head List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="buttton" style="width: 65px;">
    @Html.ActionLink("Create New", "Create")</div>
<br />
@if (Model.Count() > 0)
{
    var grid = new WebGrid(Model, canPage: true, defaultSort: "Sequence", canSort: true, rowsPerPage: 10);
    grid.Pager(WebGridPagerModes.NextPrevious);

    WebGridColumn[] columnSet = new WebGridColumn[6];
    columnSet[0] = grid.Column("", "", format: @<text><div style ='width : 70px'> @Html.ActionLink("Edit", "Edit", new { id = item.ChargeHeadID, backUrl = grid.GetPageUrl(grid.PageIndex) }, new { @class = "EditDelete" }) | @Html.ActionLink("Delete", "Delete", new { id = item.ChargeHeadID, backUrl = grid.GetPageUrl(grid.PageIndex) }, new { @class = "EditDelete" })</div></text>, canSort: false);
    columnSet[1] = grid.Column("ChargeHead", "Charge Head", format: @<text><div style ='width : 250px'>@item.ChargeHead</div></text>);
    columnSet[2] = grid.Column("ChargeInterest", "Charge Interest", format: @<text>@if (item.ChargeInterest == true) {<text><div align='center'><img src="@Url.Content("~/Content/Images/tick-green.png")"  /></div></text> }</text>, canSort: false);
    columnSet[3] = grid.Column("StandardAcHead.AcHead", "Account Head", format: @<text><div style ='width : 250px'> @(item.AcHeadID == null ? "" : @item.StandardAcHead.AcHead)</div></text>);
    columnSet[4] = grid.Column("Nature", "Nature", format: @<text><div style="width : 150px"> @(item.Nature == "C" ? "Construction Cost Basis" : (item.Nature == "A" ? "Per Area" : (item.Nature == "L" ? "Late Payment Penalty" : (item.Nature == "E" ? "Early Payment Discount" : (item.Nature == "I" ? "Interest" : (item.Nature == "T" ? "Tax" : ""))))))</div></text>);
    columnSet[5] = grid.Column("Sequence", "Sequence");
    @grid.GetHtml(tableStyle: "table", footerStyle: "webgrid-footer", rowStyle: "TableRow", alternatingRowStyle: "altTableRow", columns: grid.Columns(columnSet))
}
else
{
    <table> 
          <tr class="TableRow">
            <td>
                No Record Found.
            </td>
        </tr> 
   </table>  
}