@model IEnumerable<CloudSocietyEntities.SocietySpecialBillChargeHeadView>
@{
    ViewBag.Title = "Special Bill Charge Head";
    ViewBag.Header = "Special Bill Charge Head List";
    var societySpecialBill = (CloudSocietyEntities.SocietySpecialBill)ViewBag.SocietySpecialBill;
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";    
}
<div class="buttton" style="width: 65px;">
    @Html.ActionLink("Create New", "Create", new { societySpecialBillID = societySpecialBill.SocietySpecialBillID, societySubscriptionID = ViewBag.SocietySubscriptionID })
</div>
<br />
<table border="0" cellpadding="2" cellspacing="0" class="table">
    @{
        int Count = 1;
    }
    @foreach (var item in Model)
    {
        if (Count == 1)
        {
        <tr>
            <th>
            </th>
            <th>
                Charge Head
            </th>
            <th width="50px" >
                Rate
            </th>
        </tr>
        }  
        <tr @if ((Count % 2) == 0)
            { <text> class="TableRow" </text> }
            else
            { <text> class="altTableRow" </text>} >
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SocietySpecialBillChargeHeadID, societySubscriptionID = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
                |
                @Html.ActionLink("Delete", "Delete", new { id = item.SocietySpecialBillChargeHeadID, societySubscriptionID = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
            </td>
            <td>
                @item.Head
            </td>
            <td width="50px" align="right">
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
        </tr>
           Count = Count + 1;
    }
    @if (Count == 1)
    {
        <tr class="TableRow">
            <td>
                Currently there are no Records
            </td>
        </tr> 
    }
</table>
<br />
<div>
    @Html.ActionLink("Back to Special Bill List", "Index", "SocietySpecialBill", new { id = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
</div>
