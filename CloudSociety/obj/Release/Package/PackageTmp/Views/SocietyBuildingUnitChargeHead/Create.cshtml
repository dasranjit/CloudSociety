@model CloudSocietyEntities.SocietyBuildingUnitChargeHead
@{
    ViewBag.Title = "Create Building Unit ChargeHead";
    ViewBag.Header = "Building Unit ChargeHead";
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";      
    var societyBuildingUnit = (CloudSocietyEntities.SocietyBuildingUnit)ViewBag.SocietyBuildingUnit;
    bool IsFullAccess = new CloudSociety.Controllers.AppInfoController().IsFullAccess();
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<span class="SocName">Building : @societyBuildingUnit.SocietyBuilding.Building</span>&nbsp;<span class="SocName">Unit : @societyBuildingUnit.Unit</span>
<br /><br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <fieldset style="width: 500px">
        <legend>Create Building Unit ChargeHead</legend>     
        @Html.Hidden("SocietyBuildingUnitID",(Guid)societyBuildingUnit.SocietyBuildingUnitID)        
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    Charge Head :
                </td>
                <td>
                    @Html.DropDownList("ChargeHeadID", new SelectList(ViewBag.SocietyChargeHeadList as System.Collections.IEnumerable, "ChargeHeadID", "ChargeHead"), "<- Select Charge Head ->")
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.ChargeHeadID)</span>
                </td>
            </tr>
            <tr>
                <td>
                    Rate :
                </td>
                <td>
                    @Html.TextBox("Rate", null, new { @class = "shortWidth" })@*@Html.EditorFor(model => model.Rate)*@
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.Rate)</span>
                </td>
            </tr>
            @if (IsFullAccess)
            {
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Create" class="buttton" style="width: 45px; height: 23px;" />
                </td>
            </tr>
            }
        </table>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index", new { societyBuildingUnitID = societyBuildingUnit.SocietyBuildingUnitID, societySubscriptionID = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
</div>
