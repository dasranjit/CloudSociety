@model CloudSocietyEntities.SocietyBill
@{
    ViewBag.Title = "Society Bill Delete";
    ViewBag.Header = " Society Bill";
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";
    bool IsFullAccess = new CloudSociety.Controllers.AppInfoController().IsFullAccess(); 
}
<center>
    <fieldset style="width: 400px">
        <legend>Delete Society Bills</legend>
        <br />
        <div class="LabelDel">
            All Bills of @String.Format("{0:dd-MMM-yyyy}", ViewBag.LastBillDate) will be Deleted
            !
            <br />
            Do you want to proceed ?
        </div>
        @using (Html.BeginForm())
        {
            <table>
                <tr>
                    <td>
                        @Html.ActionLink("Cancel", "Index", "SocietyBillSeries", new { id = ViewBag.SocietySubscriptionID }, new { @class = "buttton" })
                    </td>
                    @if (IsFullAccess)
                    {
                        <td>
                            <input type="submit" value=" Yes " class="buttton" style="width: 45px; height: 23px;" />
                        </td>
                    }
                </tr>
            </table>            
        }
    </fieldset>
</center>
