@model CloudSocietyEntities.Subscriber
@{
    ViewBag.Title = "Edit My Profile";
    ViewBag.Header = " My Profile";
@*Layout = "~/Views/Shared/SubscriberLayout.cshtml";*@
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <fieldset style="width: 520px">
        <legend>Subscriber</legend>
        @Html.HiddenFor(model => model.SubscriberID)
        <br />
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.Name) :
                </td>
                <td>
                    @Html.EditorFor(model => model.Name)<span class="editor-field"> @Html.ValidationMessageFor(model => model.Name)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.Abbreviation) :
                </td>
                <td>
                    @Html.EditorFor(model => model.Abbreviation)<span class="editor-field"> @Html.ValidationMessageFor(model => model.Abbreviation)</span>
                </td>
            </tr>
            @*code added by nityananda start 07 Mar 2013*@
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.Email) :
                </td>
                <td>
                    @Html.TextBox("Email", (string)(ViewBag.SubscriberEmailId), new { @class = "maxWidth" })<span
                        class="editor-field"> @Html.ValidationMessageFor(model => model.Email)</span>
                </td>
            </tr>
            @*code added by nityananda end*@
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.Address) :
                </td>
                <td>
                    @*@Html.EditorFor(model => model.Address)*@
                    <textarea id="Address" name="Address" rows="3" cols="48">@Model.Address</textarea>
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.Address)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.City) :
                </td>
                <td>
                    @Html.EditorFor(model => model.City)<span class="editor-field"> @Html.ValidationMessageFor(model => model.City)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.PIN) :
                </td>
                <td>
                    @Html.TextBox("PIN", String.Format("{0:0}", Model.PIN), new { @class = "shortWidth" })
                    @*                    @Html.EditorFor(model => model.PIN)*@<span class="editor-field">
                        @Html.ValidationMessageFor(model => model.PIN)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.StateID) :
                </td>
                <td>
                    @Html.DropDownList("StateID", new SelectList(ViewBag.States as System.Collections.IEnumerable, "StateID", "Name"), "<- Select State ->")<span
                        class="editor-field"> @Html.ValidationMessageFor(model => model.StateID)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.ContactPerson) :
                </td>
                <td>
                    @Html.EditorFor(model => model.ContactPerson)<span class="editor-field"> @Html.ValidationMessageFor(model => model.ContactPerson)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.Phone) :
                </td>
                <td>
                    @Html.EditorFor(model => model.Phone)<span class="editor-field"> @Html.ValidationMessageFor(model => model.Phone)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.Mobile) :
                </td>
                <td>
                    @Html.EditorFor(model => model.Mobile)<span class="editor-field"> @Html.ValidationMessageFor(model => model.Mobile)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.Active) :
                </td>
                <td>
                    @Html.CheckBox("Active")<span class="editor-field">@Html.ValidationMessageFor(model => model.Active)</span>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Save" class="buttton" style="width: 45px; height: 23px;
                        vertical-align: middle;" />
                </td>
            </tr>
        </table>
        @Html.HiddenFor(model => model.CountryCode)
        @Html.HiddenFor(model => model.CreatedOn)
        <!--
        <div class="editor-label">
            @Html.LabelFor(model => model.CreatedOn)
        </div>
        <div class="editor-field">
            @Html.DisplayTextFor(model => model.CreatedOn)
            @Html.ValidationMessageFor(model => model.CreatedOn)
        </div>
-->
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index", "Society", null, new { @class = "EditDelete" })
</div>
