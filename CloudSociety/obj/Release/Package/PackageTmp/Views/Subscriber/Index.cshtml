@model IEnumerable<CloudSocietyEntities.Subscriber>
@{
    ViewBag.Title = "Subscriber";
    ViewBag.Header = "Subscriber List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    
}
<div class="buttton" style="width: 65px;">
    @Html.ActionLink("Create New", "Create")</div>
<br />
<table border="0" cellpadding="2" cellspacing="0" class="table">
    @{
        int Count = 1;
    }
    @foreach (var item in Model)
    {
        if (Count == 1)
        {
        <tr>
            <th>
            </th>
            <th>
                Name
            </th>
            <th>
                Abbreviation
            </th>           
            <th>
                City
            </th>
            <th>
                PIN
            </th>
            <th>
                State
            </th>
            <th>
                ContactPerson
            </th>
            <th>
                Phone
            </th>
            <th>
                Mobile
            </th>
            <th>
                Active
            </th>
        </tr>
        }

        <tr @if ((Count % 2) == 0)
            { <text> class="TableRow" </text> }
            else
            { <text> class="altTableRow" </text>} >
           <td>
               @* @Html.ActionLink("Edit", "Edit", new { id=item.SubscriberID }) |
               @Html.ActionLink("Details", "Details", new { id=item.SubscriberID }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.SubscriberID }, new { @class = "EditDelete" })
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Abbreviation
            </td>
            <!--
        <td>
            @item.Address
        </td>
-->
            <td>
                @item.City
            </td>
            <td>
                @item.PIN
            </td>
            <td>
                @item.State.Name
            </td>
            <td>
                @item.ContactPerson
            </td>
            <td>
                @item.Phone
            </td>
            <td>
                @item.Mobile
            </td>
            <td width="35px" align="center">
                @if (item.Active == true)
                { <text>
                    <img src="@Url.Content("~/Content/Images/tick-green.png")"  />
                    </text> }
                else
                { <text>
                    <img src="@Url.Content("~/Content/Images/Copy of cancel-icon.png")" /></text> }
            </td>
            @*<td>
            @(item.Active ? "Y" : "N")
        </td>*@
        </tr>
                Count = Count + 1;

    }
    @if (Count == 1)
    {<tr class="TableRow">
        <td>
            Currently there are no Records
        </td>
    </tr> }
</table>
