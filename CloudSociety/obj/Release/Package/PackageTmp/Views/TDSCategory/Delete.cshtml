@model CloudSocietyEntities.TDSCategory
@{
    ViewBag.Title = "Delete TDS Category";
    ViewBag.Header = "TDS Category";   
}
<div class="LabelDel">
    Are you sure you want to delete this?</div>
<br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    @Html.HiddenFor(model => model.TDSCategoryID)
    <fieldset style="width: 600px">
        <legend>TDS Category Details</legend>
        <br />
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    Category :
                </td>
                <td>
                    @Model.Category
                    @Html.HiddenFor(model => model.Category)
                </td>
            </tr>
            <tr>
                <td>
                    Account Head :
                </td>
                <td>
                    @(Model.StandardAcHead != null ? Model.StandardAcHead.AcHead : "")
                    @Html.HiddenFor(model => model.AcHeadID)
                </td>
            </tr>
            <tr>
                <td>
                    Section :
                </td>
                <td>
                    @Model.Section
                    @Html.HiddenFor(model => model.Section)
                </td>
            </tr>
            <tr>
                <td align="center" colspan="2">
                    <input type="submit" value="Delete" class="buttton" style="width: 45px; height: 23px; vertical-align: middle;" />
                </td>
            </tr>
        </table>
    </fieldset>
    @Html.HiddenFor(model => model.CreatedByID)
    @Html.HiddenFor(model => model.CreatedOn)
    @Html.HiddenFor(model => model.UpdatedByID)
    @Html.HiddenFor(model => model.UpdatedOn)
}
<br />
