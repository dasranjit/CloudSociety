@model IEnumerable<CloudSocietyEntities.TDSCategory>
@{
    ViewBag.Title = "TDS Category";
    ViewBag.Header = "TDS Category List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="buttton" style="width: 65px;">
    @Html.ActionLink("Create New", "Create")</div>
<br />
<table border="0" cellpadding="2" cellspacing="0" class="table">
    @{
        int Count = 1;
    }
    @foreach (var item in Model)
    {
        if (Count == 1)
        {
        <tr>
            <th>
            </th>
            <th>
                Category
            </th>
            <th>
                AcHead
            </th>
            <th>
                Section
            </th>
        </tr>
        }
        <tr @if ((Count % 2) == 0)
            { <text> class="TableRow" </text> }
            else
            { <text> class="altTableRow" </text>} >
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TDSCategoryID }, new { @class = "EditDelete" })
                |
                @Html.ActionLink("Delete", "Delete", new { id = item.TDSCategoryID }, new { @class = "EditDelete" })
                |
                @Html.ActionLink("Rates", "Index", "TDSCategoryRate", new { parentid = item.TDSCategoryID }, new { @class = "EditDelete" })
            </td>
            <td>
                @item.Category
            </td>
            <td>
                @if (item.StandardAcHead != null)
                {
                    @item.StandardAcHead.AcHead
                }
            </td>
            <td>
                @item.Section
            </td>
        </tr>    
           Count = Count + 1;
    }
    @if (Count == 1)
    {<tr class="TableRow">
        <td>
            Currently there are no Records
        </td>
    </tr>}
</table>
