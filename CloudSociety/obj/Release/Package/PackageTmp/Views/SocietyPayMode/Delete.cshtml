@model CloudSocietyEntities.SocietyPayMode
@{
    ViewBag.Title = "Delete Society Pay Mode";
    ViewBag.Header = "Society Pay Mode";
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";
    bool IsFullAccess = new CloudSociety.Controllers.AppInfoController().IsFullAccess();
}
<div class="LabelDel">
    Are you sure you want to delete this?
</div>
<br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")        
    <fieldset style="width: 400px">
        <legend>Society Pay Mode</legend>
        <table>
            <tr>
                <td>
                    Pay Mode Code :
                </td>
                <td>
                    @Html.DisplayFor(model => model.PayModeCode)
                </td>
            </tr>
            <tr>
                <td>
                    Pay Mode :
                </td>
                <td>
                    @Html.DisplayFor(model => model.PayMode)
                </td>
            </tr>
            <tr>
                <td>
                    Ask Details :
                </td>
                <td>
                    @if (Model.AskDetails == true)
                    { <text>
                        <img alt="" src="@Url.Content("~/Content/Images/tick-green.png")"  />
                        </text> }
                    else
                    { 
                        <text>
                        <img alt="" src="@Url.Content("~/Content/Images/Copy of cancel-icon.png")" /></text> 
                    }
                </td>
            </tr>
            <tr>
                <td>
                    Active :
                </td>
                <td>
                    @if (Model.Active == true)
                    { <text>
                        <img alt="" src="@Url.Content("~/Content/Images/tick-green.png")"  />
                        </text> }
                    else
                    { 
                        <text>
                        <img alt="" src="@Url.Content("~/Content/Images/Copy of cancel-icon.png")" /></text> 
                    }
                </td>
            </tr>
            <tr>
                <td>
                    Account Head :
                </td>
                <td>
                    @Html.DisplayFor(model => model.AcHead.Name)
                </td>
            </tr>
            @if (IsFullAccess)
            {
            <tr>
                <td align="center" colspan="2">
                    <input type="submit" value="Delete" class="buttton" style="width: 45px; height: 23px;" />
                </td>
            </tr>
            }
        </table>
    </fieldset>
    @Html.HiddenFor(model => model.SocietyID)
    @Html.HiddenFor(model => model.PayModeCode)
    @Html.HiddenFor(model => model.PayMode)
    @Html.HiddenFor(model => model.AskDetails)
    @Html.HiddenFor(model => model.Active)
    @Html.HiddenFor(model => model.AcHeadID)
    @Html.HiddenFor(model => model.CreatedByID)
    @Html.HiddenFor(model => model.CreatedOn)
    @Html.HiddenFor(model => model.UpdatedByID)
    @Html.HiddenFor(model => model.UpdatedOn)
}
<div>
    @Html.ActionLink("Back to List", "Index", new { id = (Guid)ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
</div>
