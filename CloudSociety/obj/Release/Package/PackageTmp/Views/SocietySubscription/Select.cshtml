@model IEnumerable<CloudSocietyEntities.SocietySubscription>

@{
    ViewBag.Title = "Select Year";
    ViewBag.Header = "Select Year";
    Layout = "~/Views/Shared/SubscriberLayout.cshtml";
}

<br />
<span class="SocName">@Model.FirstOrDefault().Society.Name</span><br/><br/>

<table border="0" cellpadding="2" cellspacing="0" class="table">
    @{
        int Count = 1;
    }
    @foreach (var item in Model)
    {
        if (Count == 1)
        {
  <tr>
        <th></th>
        <th>
            Start
        </th>
        <th>
            End
        </th>
        <th>
            Paid Till
        </th>
        <th>
            Locked Till
        </th>
        <th>
             Closed    
        </th>
    </tr>
       
        }
 
 <tr @if ((Count % 2) == 0)
     { <text> class="TableRow" </text> }
     else
     { <text> class="altTableRow" </text>} >
   <td>
      @Html.ActionLink("Select", "Menu", new { id = item.SocietySubscriptionID }, new { @class = "EditDelete" })
@*        | 
      @Html.ActionLink("Lock", "Lock", new { id = item.SocietySubscriptionID }, new { @class = "EditDelete" })*@
   </td>
   <td>
        @String.Format("{0:dd-MMM-yyyy}", item.SubscriptionStart)
    </td>
    <td>
        @String.Format("{0:dd-MMM-yyyy}", item.SubscriptionEnd)
    </td>
    <td>
        @String.Format("{0:dd-MMM-yyyy}", item.PaidTillDate)
    </td>
   <td>
        @String.Format("{0:dd-MMM-yyyy}", item.LockedTillDate)
@*      @if (item.LockedTillDate == null)
      {
          Html.ActionLink("Lock", "Lock", new { id = item.SocietySubscriptionID }, new { @class = "EditDelete" });
      }
      else
      {
          Html.ActionLink(String.Format("{0:dd-MMM-yyyy}", item.LockedTillDate), "Lock", new { id = item.SocietySubscriptionID }, new { @class = "EditDelete" });
      }*@
   </td>
    <td>
        @if (item.Closed == true)
        { <text> <img src="@Url.Content("~/Content/Images/Copy of cancel-icon.png")" /></text> }
    </td>
 </tr>
            Count = Count + 1;

    }
    @if (Count == 1)
    {<tr class="TableRow"><td>Currently there are no Records</td></tr> }
</table>
<br/><br/>

<div>
@if (Roles.IsUserInRole("Support"))
{
       @Html.ActionLink("Back to Society List", "IndexForSupport", "Society", null, new { @class = "EditDelete" })
}
else if (Roles.IsUserInRole("Member") || Roles.IsUserInRole("OfficeBearer"))
{
@*       @Html.ActionLink("Back", "Menu", "SocietyMember", null, new { @class = "EditDelete" }) *@
}
else
{
    @Html.ActionLink("Back to Society List", "Index", "Society", null, new { @class = "EditDelete" })
}
</div>


