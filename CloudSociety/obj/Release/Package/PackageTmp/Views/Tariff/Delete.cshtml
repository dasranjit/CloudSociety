@model CloudSocietyEntities.Tariff
@{
    ViewBag.Title = "Delete Tariff";
    ViewBag.Header = "Tariff";    
}
<div class="LabelDel">
    Are you sure you want to delete this?</div>
<br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    @Html.HiddenFor(model => model.TariffID)
    <fieldset style="width: 500px">
        <legend>Tariff Details</legend>
        <br />
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    Name :
                </td>
                <td>
                    @Model.Name
                </td>
            </tr>
            <tr>
                <td>
                    wef :
                </td>
                <td>
                    @String.Format("{0:dd-MMM-yyyy}", Model.wef)
                </td>
            </tr>
            <tr>
                <td>
                    End Date :
                </td>
                <td>
                    @String.Format("{0:dd-MMM-yyyy}", Model.uEndDate)
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Delete" class="buttton" style="width: 45px; height: 23px;
                        vertical-align: middle;" />
                </td>
            </tr>
        </table>
    </fieldset>     
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.uEndDate)
    @Html.HiddenFor(model => model.wef)
    @Html.HiddenFor(model => model.CreatedByID)
    @Html.HiddenFor(model => model.CreatedOn)
    @Html.HiddenFor(model => model.UpdatedByID)
    @Html.HiddenFor(model => model.UpdatedOn)
}
<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "EditDelete" })
</div>
