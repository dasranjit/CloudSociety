@{
    ViewBag.Title = "Delete Account Year Closing Entry";
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";
    bool IsFullAccess = new CloudSociety.Controllers.AppInfoController().IsFullAccess();   

}
<br />
@if (ViewBag.StatusMessage != "")
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <br />
    <center>
        <h2>@ViewBag.StatusMessage</h2>
    </center>   
}
else
{
    using (Html.BeginForm())
    {
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <center>
        <fieldset style="width: 400px">
            <br />
            <table>
                <tr>
                    <td colspan="2" align="center">
                        <div class="LabelDel">
                            This will delete Year Closing Entry.<br />
                            OK to Proceed.</div>
                    </td>
                </tr>
                <tr>
                    @if (IsFullAccess)
                    {                   
                        <td align="center">
                            <input type="submit" value="OK" class="buttton" style="width: 45px; height: 23px;" />
                        </td>
                    }
                    <td align="center">
                        @Html.ActionLink("Cancel", "Menu", "SocietySubscription", new { id = ViewBag.SocietySubscriptionID }, new { @class = "buttton", style = "width: 50px; height: 23px;" })
                    </td>
                </tr>
            </table>
        </fieldset>
    </center>
    }
}