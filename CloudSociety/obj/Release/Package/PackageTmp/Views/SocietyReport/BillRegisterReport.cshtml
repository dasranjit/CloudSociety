@{
    ViewBag.Title = "Bill Register";
    ViewBag.Header = "Bill Register ";
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";    
}
@using (Html.BeginForm())
{       
    <fieldset style="width: 500px">
        <legend>Select Bill Abbreviation</legend>
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    @Html.Label("Bill Abbreviation :")
                </td>
                <td>
                    @Html.DropDownList("BillAbbreviation", new SelectList(ViewBag.SocietyBillSeriesList as System.Collections.IEnumerable, "BillAbbreviation", "BillAbbreviation"), "<- Select Bill Abbreviation ->")
                </td>
            </tr>
            <tr>
                <td align="center" colspan="2">
                    <input type="submit" value=" GO " class="buttton" style="width: 45px; height: 23px;
                        vertical-align: middle;" />
                </td>
            </tr>
        </table>
    </fieldset>
}
<div>
    @Html.ActionLink("Back", "Menu", "SocietySubscription", new { id = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
</div>
