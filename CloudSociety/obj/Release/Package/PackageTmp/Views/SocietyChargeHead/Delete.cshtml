@model CloudSocietyEntities.SocietyChargeHead
@{
    ViewBag.Title = "Delete Society Charge Head";
    ViewBag.Header = "Society Charge Head";
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";
    bool IsFullAccess = new CloudSociety.Controllers.AppInfoController().IsFullAccess(); 
}
<div class="LabelDel">
    Are you sure you want to delete this?
</div>
<br />
<fieldset style="width: 500px">
    <legend>Society Charge Head</legend>
    <table>
        <tr>
            <td>
                Charge Head :
            </td>
            <td>
                @Html.DisplayFor(model => model.ChargeHead)
            </td>
        </tr>
        <tr>
            <td>
                Charge Interest :
            </td>
            <td>
                @if (Model.ChargeInterest == true)
                { <text>
                    <img alt="" src="@Url.Content("~/Content/Images/tick-green.png")"  />
                    </text> 
                }
                else
                { 
                    <text>
                    <img alt="" src="@Url.Content("~/Content/Images/Copy of cancel-icon.png")" /></text> 
                }
            </td>
        </tr>
        <tr>
            <td>
                Account Head :
            </td>
            <td>
                @Html.DisplayFor(model => model.AcHead.Name)
            </td>
        </tr>
        <tr>
            <td>
                Nature :
            </td>
            <td>
                @(Model.Nature == "C" ? "Construction Cost Basis" : (Model.Nature == "A" ? "Per Area" : (Model.Nature == "L" ? "Late Payment Penalty" : (Model.Nature == "E" ? "Early Payment Discount" : (Model.Nature == "I" ? "Interest" : (Model.Nature == "T" ? "Tax" : ""))))))
            </td>
        </tr>
        <tr>
            <td>
                Rate :
            </td>
            <td>
                @Html.DisplayFor(model => model.Rate)
            </td>
        </tr>
        <tr>
            <td>
                Sequence :
            </td>
            <td>
                @Html.DisplayFor(model => model.Sequence)
            </td>
        </tr>
        <tr>
            <td>
                Bill Abbreviation :
            </td>
            <td>
                @Html.DisplayFor(model => model.BillAbbreviation)
            </td>
            </td>
        </tr>
        @if (IsFullAccess)
        {
            using (Html.BeginForm())
            {
            @Html.ValidationSummary(false, "Following errors occurred while processing your request")              
            <tr>
                <td align="center" colspan="2">
                    <input type="submit" value="Delete" class="buttton" style="width: 45px; height: 23px;" />
                </td>
            </tr>
            }
        }
    </table>
</fieldset>
<div>
    <a href="@ViewBag.BackUrl" class="EditDelete">Back to List</a> @*@Html.ActionLink("Back to List", "Index", new { id = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })*@
</div>
