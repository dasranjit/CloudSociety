@model CloudSocietyEntities.TariffRate
@{
    ViewBag.Title = "Edit Tariff Rate";
    ViewBag.Header = " Tariff Rate";
    var tariff = (CloudSocietyEntities.Tariff)ViewBag.Tariff;
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<span class="SocName">Tariff :&nbsp;@tariff.Name&nbsp;&nbsp;wef :&nbsp;@String.Format("{0:dd-MMM-yyyy}", tariff.wef)</span>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <fieldset style="width: 580px">
        <legend>Edit Tariff Rate</legend>
        @Html.HiddenFor(model => model.TariffRateID)
        @Html.HiddenFor(model => model.TariffID)
        <br />
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td class="editor-label">
                    @*@Html.LabelFor(model => model.ServiceType) :*@
                    @Html.Label("Service Type") :
                </td>
                <td class="editor-field">
                    @*@Html.EditorFor(model => model.ServiceTypeID)*@
                    @Html.DropDownList("ServiceTypeID", new SelectList(ViewBag.ServiceTypes as System.Collections.IEnumerable, "ServiceTypeID", "Type"))
                    <span class="editor-field">
                        @Html.ValidationMessageFor(model => model.ServiceTypeID)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label" >
                    @Html.LabelFor(model => model.Rate) :
                </td>
                <td>
                     @Html.TextBox("Rate", Model.Rate, new { @class = "shortWidth" })
                    <span class="editor-field"> @Html.ValidationMessageFor(model => model.Rate)</span>
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Save" class="buttton" style="width: 45px; height: 23px;
                        vertical-align: middle;" />
                </td>
            </tr>
        </table>
        @Html.HiddenFor(model => model.CreatedByID)
        @Html.HiddenFor(model => model.CreatedOn)
    </fieldset>
      
}
<div>
    @Html.ActionLink("Back to List", "Index", "TariffRate", new { parentid = (object)Model.TariffID }, new { @class = "EditDelete" })
</div>
