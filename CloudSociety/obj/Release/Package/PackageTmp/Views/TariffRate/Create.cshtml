@model CloudSocietyEntities.TariffRate
@{
    ViewBag.Title = "Create Tariff Rate";
    ViewBag.Header = "Tariff Rate";
    var tariff = (CloudSocietyEntities.Tariff)ViewBag.Tariff;
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<span class="SocName">Tariff :&nbsp;@tariff.Name&nbsp;&nbsp;wef :&nbsp;@String.Format("{0:dd-MMM-yyyy}", tariff.wef)</span>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <fieldset style="width: 580px">
        <legend>Create Tariff Rate</legend>
        <br />
        @Html.Hidden("TariffID", tariff.TariffID)
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td class="editor-label">
                    @*@Html.LabelFor(model => model.ServiceType) :*@
                    @Html.Label("Service Type") :
                </td>
                <td class="editor-field">
                    @*@Html.EditorFor(model => model.ServiceTypeID)*@
                    @Html.DropDownList("ServiceTypeID", new SelectList(ViewBag.ServiceTypes as System.Collections.IEnumerable, "ServiceTypeID", "Type"), "<- Select Service Type ->")
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.ServiceTypeID)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.Rate) :
                </td>
                <td>
                    @Html.TextBox("Rate", null, new { @class = "shortWidth" })
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.Rate)</span>
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Create" class="buttton" style="width: 45px; height: 23px;
                        vertical-align: middle;" />
                </td>
            </tr>
        </table>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index", "TariffRate", new { parentid = tariff.TariffID }, new { @class = "EditDelete" })
</div>
