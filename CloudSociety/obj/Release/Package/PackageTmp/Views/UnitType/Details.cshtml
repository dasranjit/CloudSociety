@model CloudSocietyEntities.UnitType

@{
    ViewBag.Title = "Details";
    ViewBag.Header = "Details";
    
}

<fieldset style="width: 600px">
    <legend>Unit Type</legend>
    <br />
    <table border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td class="editor-label"  >
                Type :
            </td>
            <td>
                @Model.Type
            </td>
        </tr>
        <tr>
            <td class="editor-label">
                Active :
            </td>
             <td  >
               @if (Model.Active == true)
               { <text> <img src="@Url.Content("~/Content/Images/tick-green.png")"  /> </text> }
               else
               { <text> <img src="@Url.Content("~/Content/Images/Copy of cancel-icon.png")" /></text> }
            </td>
        </tr>
    </table>

</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.UnitTypeID }, new { @class = "EditDelete" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "EditDelete" })
</p>

