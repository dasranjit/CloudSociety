@model CloudSocietyEntities.SocietySpecialBill
@{
    ViewBag.Title = "Delete Special Bill";
    ViewBag.Header = "Special Bill";
    bool IsFullAccess = new CloudSociety.Controllers.AppInfoController().IsFullAccess();
}
<div class="LabelDel">
    Are you sure you want to delete this?
</div>
<br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")        
    <fieldset style="width: 400px">
        <legend>Special Bill</legend>
        <table>
            <tr>
                <td>
                    Unit Type :
                </td>
                <td>
                    @Html.DisplayFor(model => model.UnitType.Type)
                </td>
            </tr>
            <tr>
                <td>
                    Building Unit :
                </td>
                <td>
                    @Html.DisplayFor(model => model.SocietyBuildingUnit.SocietyBuilding.Building) - @Html.DisplayFor(model => model.SocietyBuildingUnit.Unit)
                </td>
            </tr>
            <tr>
                <td>
                    From Date :
                </td>
                <td>
                    @String.Format("{0:dd-MMM-yyyy}", Model.FromDate)
                </td>
            </tr>
            <tr>
                <td>
                    To Date :
                </td>
                <td>
                    @String.Format("{0:dd-MMM-yyyy}", Model.ToDate)
                </td>
            </tr>
            @if (IsFullAccess)
            {
            <tr>
                <td align="center" colspan="2">
                    <input type="submit" value="Delete" class="buttton" style="width: 45px; height: 23px;" />
                </td>
            </tr>
            }
        </table>
    </fieldset>   
}
<div>
    @Html.ActionLink("Back to List", "Index", new { id = (Guid)ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
</div>
