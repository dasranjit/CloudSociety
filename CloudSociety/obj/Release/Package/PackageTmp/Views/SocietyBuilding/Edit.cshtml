@model CloudSocietyEntities.SocietyBuilding
@{
    ViewBag.Title = "Edit Society Building";
    ViewBag.Header = " Society Building";
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";
    bool IsFullAccess = new CloudSociety.Controllers.AppInfoController().IsFullAccess();
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <fieldset style="width: 550px">
        <legend>Edit Society Building</legend>
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    Building :
                </td>
                <td>
                    @Html.EditorFor(model => model.Building)
                    <div class="editor-field">@Html.ValidationMessageFor(model => model.Building)</div>
                </td>
            </tr>
            <tr>
                <td>
                    No Of Floors :
                </td>
                <td>
                    @Html.TextBox("NoOfFloors", Model.NoOfFloors, new { @class = "shortWidth" })
                    @*@Html.EditorFor(model => model.NoOfFloors)*@
                    <div class="editor-field">@Html.ValidationMessageFor(model => model.NoOfFloors)</div>
                </td>
            </tr>
            <tr>
                <td>
                    Lift :
                </td>
                <td>
                    @Html.CheckBox("Lift")
                    <div class="editor-field">@Html.ValidationMessageFor(model => model.Lift)</div>
                </td>
            </tr>
            @if (IsFullAccess)
            {
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Save" class="buttton" style="width: 45px; height: 23px;" />
                </td>
            </tr>
            }
        </table>
        @Html.HiddenFor(model => model.SocietyBuildingID)
        @Html.HiddenFor(model => model.SocietyID)
        @Html.HiddenFor(model => model.CreatedByID)
        @Html.HiddenFor(model => model.CreatedOn)
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index", new { id = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
</div>
