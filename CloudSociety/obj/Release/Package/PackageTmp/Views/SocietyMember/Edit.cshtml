            </tr>
            <tr>
                <td>
                    Phone No :
                </td>
                <td>
                    @Html.TextBox("PhoneNo", Model.PhoneNo, new { @class = "shortWidth" })
                   <span class="editor-field">@Html.ValidationMessageFor(model => model.PhoneNo)</span>
                    &nbsp;&nbsp;&nbsp;&nbsp;Home Phone No :
                    @Html.TextBox("HomePhoneNo", Model.HomePhoneNo, new { @class = "shortWidth" })
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.HomePhoneNo)</span>
                </td>
            </tr>
            <tr>
                <td>
                    Office Phone No :
                </td>
