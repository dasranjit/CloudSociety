@model IEnumerable<CloudSocietyEntities.PasswordQuestion>
@{
    ViewBag.Title = "Password Question";
    ViewBag.Header = "Password Question List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="buttton" style="width: 65px;">
    @Html.ActionLink("Create New", "Create")</div>
<br />
<table border="0" cellpadding="2" cellspacing="0" class="table">
    @{
        int Count = 1;
    }
    @foreach (var item in Model)
    {
        if (Count == 1)
        {            
        <tr>
        <th></th>
            <th>
                Name
            </th>
            <th>
                Active
            </th>
        </tr>      
        }
        <tr @if ((Count % 2) == 0)
            { <text> class="TableRow" </text> }
            else
            { <text> class="altTableRow" </text>} >
            <td width="80px" align="center">
                @Html.ActionLink("Edit", "Edit", new { id = item.PasswordQuestionID }, new { @class = "EditDelete" })
                @*Html.ActionLink("Details", "Details", new { id = item.PasswordQuestionID }, new { @class = "EditDelete" }) *@
                | @Html.ActionLink("Delete", "Delete", new { id = item.PasswordQuestionID }, new { @class = "EditDelete" })
            </td>
            <td width="500px">
                @item.Question
            </td>
            <td width="50px" align="center">
                @if (item.Active == true)
                { 
                    <text>
                    <img src="@Url.Content("~/Content/Images/tick-green.png")"  />
                    </text> }
                else
                { 
                    <text>
                    <img src="@Url.Content("~/Content/Images/Copy of cancel-icon.png")" />
                    </text> 
                }
            </td>
        </tr>    
                Count = Count + 1;
    }
    @if (Count == 1)
    {
        <tr class="TableRow">
            <td>
                Currently there are no Records
            </td>
        </tr> 
    }
</table>
