@model CloudSocietyEntities.SocietyBillSeries
@{
    ViewBag.Title = "Edit Bill Series";
    ViewBag.Header = " Bill Series";
    ViewBag.SocietyNameHeader = ViewBag.SocietyHead;
    Layout = "~/Views/Shared/SocietyLayout.cshtml";
    bool IsFullAccess = new CloudSociety.Controllers.AppInfoController().IsFullAccess();
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <fieldset style="width: 585px">
        <legend>Edit Bill Series</legend>
        <fieldset style="width: 550px">
            <legend>Billing Parameters</legend>
            <table border="0" cellpadding="0" cellspacing="0">
                <tr>
                    <td>
                        Bill Abbreviation :
                    </td>
                    <td>
                        @Html.TextBox("BillAbbreviation", Model.BillAbbreviation, new { @class = "shortWidth" })@*@Html.EditorFor(model => model.BillAbbreviation)*@
                        <span class="editor-field">@Html.ValidationMessageFor(model => model.BillAbbreviation)</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.Tax) :
                    </td>
                    <td>
                        @Html.DropDownList("TaxID", new SelectList(ViewBag.TaxList as System.Collections.IEnumerable, "TaxID", "Head"), "<- Select Tax ->")
                        <span class="editor-field">@Html.ValidationMessageFor(model => model.TaxID)</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Billing Frequency :
                    </td>
                    <td>
                        @Html.DropDownList("BillingFrequency", ViewBag.BillFrequenciesList as SelectList)
                        <span class="editor-field">@Html.ValidationMessageFor(model => model.BillingFrequency)</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Bill Day :
                    </td>
                    <td>
                        @Html.TextBox("BillDay", Model.BillDay, new { @class = "shortWidth" })
                       <span class="editor-field">@Html.ValidationMessageFor(model => model.BillDay)</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Due Days :
                    </td>
                    <td>
                        @Html.TextBox("DueDays", Model.DueDays, new { @class = "shortWidth" })
                         @Html.ValidationMessageFor(model => model.DueDays)
                    </td>
                </tr>
            </table>
        </fieldset>
        <fieldset style="width: 550px">
            <legend>Bill Printing Parameters</legend>
            <table border="0" cellpadding="0" cellspacing="0">
                <tr>
                    <td>
                        Terms :
                    </td>
                    <td>
                        @Html.TextAreaFor(model => model.Terms, 5, 50, 1)
                        <span class="editor-field">@Html.ValidationMessageFor(model => model.Terms)</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Note :
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Note)
                        <span class="editor-field">@Html.ValidationMessageFor(model => model.Note)</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Print Area :
                    </td>
                    <td>
                        @Html.CheckBox("PrintArea") <span class="editor-field">@Html.ValidationMessageFor(model => model.PrintArea)</span>
                    </td>
                </tr>
            </table>
        </fieldset>
        <fieldset style="width: 550px">
            <legend>OD Interest Parameters</legend>
            <table border="0" cellpadding="0" cellspacing="0">
                <tr>
                    <td>
                        Interest Rate :
                    </td>
                    <td>
                        @Html.TextBox("InterestRate", Model.InterestRate, new { @class = "shortWidth" })
                        <span class="editor-field">@Html.ValidationMessageFor(model => model.InterestRate)</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Minimum Interest :
                    </td>
                    <td>
                        @Html.TextBox("MinimumInterest", Model.MinimumInterest, new { @class = "shortWidth" })
                        <span class="editor-field">@Html.ValidationMessageFor(model => model.MinimumInterest)</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        OS Adjustment :
                    </td>
                    <td>
                        @Html.DropDownList("OSAdjustment", ViewBag.OSAdjustmentList as SelectList)
                        <span class="editor-field">@Html.ValidationMessageFor(model => model.OSAdjustment)</span>
                    </td>
                </tr>
            </table>
        </fieldset>
        @if (IsFullAccess)
        {
        <div align="center">
            <input type="submit" value="Save" class="buttton" style="width: 45px; height: 23px;
                vertical-align: middle;" />
        </div>
        }
        @Html.HiddenFor(model => model.SocietyID)
        @Html.HiddenFor(model => model.CreatedByID)
        @Html.HiddenFor(model => model.CreatedOn)
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index", new { id = ViewBag.SocietySubscriptionID }, new { @class = "EditDelete" })
</div>
