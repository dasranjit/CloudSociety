@model CloudSocietyEntities.PayMode
@{
    ViewBag.Title = "Create PayMode";
    ViewBag.Header = "Pay Mode";     
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    <fieldset style="width: 500px">
        <legend>Create Pay Mode</legend>
        <br />
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td class="editor-label">
                    @Html.Label("Pay Mode Code :")
                </td>
                <td>
                    @Html.TextBox("PayModeCode", null, new { @class = "shortWidth" })
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.PayModeCode)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    @Html.Label("Pay Mode :")
                </td>
                <td>
                    @Html.TextBox("Mode", null, new { @class = "mediumWidth" })
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.Mode)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    @Html.Label("Ac Head :")
                </td>
                <td>
                    @Html.DropDownList("AcHeadID", new SelectList(ViewBag.StandardAcHeadsList as System.Collections.IEnumerable, "AcHeadID", "AcHead"))
                    <span class="editor-field">@Html.ValidationMessageFor(model => model.AcHeadID)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    @Html.Label("Ask Details :")
                </td>
                <td>
                    @Html.EditorFor(model => model.AskDetails)<span class="editor-field"> @Html.ValidationMessageFor(model => model.AskDetails)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.Active) :
                </td>
                <td>
                    @Html.EditorFor(model => model.Active)<span class="editor-field"> @Html.ValidationMessageFor(model => model.Active)</span>
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Create" class="buttton" style="width: 45px; height: 23px;
                        vertical-align: middle;" />
                </td>
            </tr>
        </table>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "EditDelete" })
</div>
