@model CloudSocietyEntities.PayMode
@{
    ViewBag.Title = "Delete Pay Mode";
    ViewBag.Header = "Pay Mode";     
}
<div class="LabelDel">
    Are you sure you want to delete this?</div>
<br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "Following errors occurred while processing your request")
    
    <fieldset style="width: 500px">
        <legend>Delete Pay Mode Details</legend>
        <br />
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    Pay Mode Code :
                </td>
                <td>
                    @Model.PayModeCode
                </td>
            </tr>
            <tr>
                <td>
                    Mode :
                </td>
                <td>
                    @Model.Mode
                </td>
            </tr>
            <tr>
                <td>
                    AcHead :
                </td>
                <td>
                    @Model.StandardAcHead.AcHead
                </td>
            </tr>
            <tr>
                <td>
                    Ask Details :
                </td>
                <td>
                    @if (Model.AskDetails == true)
                    { <text>
                        <img src="@Url.Content("~/Content/Images/tick-green.png")"  />
                        </text> }
                    else
                    { <text>
                        <img src="@Url.Content("~/Content/Images/Copy of cancel-icon.png")" /></text> }
                </td>
            </tr>
            <tr>
                <td>
                    Active :
                </td>
                <td>
                    @if (Model.Active == true)
                    { <text>
                        <img src="@Url.Content("~/Content/Images/tick-green.png")"  />
                        </text> }
                    else
                    { <text>
                        <img src="@Url.Content("~/Content/Images/Copy of cancel-icon.png")" /></text> }
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Delete" class="buttton" style="width: 45px; height: 23px;" />
                </td>
            </tr>
        </table>
    </fieldset>      
    @Html.HiddenFor(m => m.SubscriptionInvoices)
    @Html.HiddenFor(m => m.StandardAcHead)
    @Html.HiddenFor(m => m.PayModeCode)
    @Html.HiddenFor(m => m.Mode)
    @Html.HiddenFor(m => m.AskDetails)
    @Html.HiddenFor(m => m.Active)
    @Html.HiddenFor(m => m.AcHeadID) 
    @Html.HiddenFor(m => m.UpdatedByID)
    @Html.HiddenFor(m => m.UpdatedOn)   
        
}
@Html.ActionLink("Back to List", "Index", null, new { @class = "EditDelete" })
