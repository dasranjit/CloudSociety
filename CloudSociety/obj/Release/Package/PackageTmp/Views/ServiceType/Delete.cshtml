@model CloudSocietyEntities.ServiceType
@{
    ViewBag.Title = "Delete Service Type";
    ViewBag.Header = "Service Type";   
}
<div class="LabelDel">
    Are you sure you want to delete this?</div>
<br />
<fieldset style="width: 500px">
    <legend>Service Type Details</legend>
    <br />
    <table>
        <tr>
            <td>
                Type :
            </td>
            <td>
                @Model.Type
            </td>
        </tr>
        <tr>
            <td>
                Mandatory :
            </td>
            <td align="center">
                @if (Model.Mandatory == true)
                {<img src="@Url.Content("~/Content/Images/tick-green.png")" />}
            </td>
        </tr>
        <tr>
            <td>
                Chargeability :
            </td>
            <td>
                @(Model.Chargeability == "O" ? "One Time" : (Model.Chargeability == "M" ? "Monthly" : "Quarterly"))
            </td>
        </tr>
        <tr>
            <td>
                Basis :
            </td>
            <td>
                @(Model.Basis == "M" ? "per Member" : "per Society")
            </td>
        </tr>
        <tr>
            <td>
                Nature :
            </td>
            <td>
                @(Model.Nature == "A" ? "Accounts" : (Model.Nature == "B" ? "Billing" : (Model.Nature == "S" ? "SMS" : "")))
            </td>
        </tr>
        <tr>
            <td>
                Sequence :
            </td>
            <td>
                @Model.Sequence
            </td>
        </tr>
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model=>model.Type)
            <tr>
                <td colspan="2">
                    <input type="submit" value="Delete" class="buttton" style="width: 45px; height: 23px;
                        vertical-align: middle;" />
                </td>
            </tr>   
        }
    </table>
</fieldset>
<br />
@Html.ActionLink("Back to List", "Index", null, new { @class = "EditDelete" })
