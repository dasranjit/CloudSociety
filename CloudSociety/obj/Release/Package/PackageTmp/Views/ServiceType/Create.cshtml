    <fieldset style="width: 600px">
        <legend>Create Service Type</legend>
        <br />
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td class="editor-label"  >
                   @Html.LabelFor(model => model.Type) :
                </td>
                <td>
                    @Html.EditorFor(model => model.Type)<span class="editor-field"> @Html.ValidationMessageFor(model => model.Type)</span>
                </td>
            </tr>
            <tr>
               <td class="editor-label">
                    @Html.LabelFor(model => model.Mandatory) :
                </td>
                <td>
                   @* @Html.EditorFor(model => model.Mandatory )<span class="editor-field"> @Html.ValidationMessageFor(model => model.Mandatory)</span>*@
                   @Html.CheckBox("Mandatory")
                   <span class="editor-field"> @Html.ValidationMessageFor(model => model.Mandatory)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label"  >
                   @Html.LabelFor(model => model.Chargeability) :
                </td>
                <td>
                    @*@Html.EditorFor(model => model.Chargeability)<span class="editor-field"> @Html.ValidationMessageFor(model => model.Chargeability)</span>*@
                    @Html.DropDownList("Chargeability", ViewBag.ChargeabilityList as SelectList, "<- Select Chargeability ->")<span class="editor-field"> @Html.ValidationMessageFor(model => model.Chargeability)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label"  >
                   @Html.LabelFor(model => model.Basis) :
                </td>
                <td>
                    @Html.DropDownList("Basis", ViewBag.BasisList as SelectList, "<- Select Basis ->")<span class="editor-field"> @Html.ValidationMessageFor(model => model.Basis)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label"  >
                   @Html.LabelFor(model => model.Nature) :
                </td>
                <td>
                    @Html.DropDownList("Nature", ViewBag.NatureList as SelectList, "<- Select Nature ->")<span class="editor-field"> @Html.ValidationMessageFor(model => model.Nature)</span>
                </td>
            </tr>
            <tr>
                <td class="editor-label"  >
                   @Html.LabelFor(model => model.Sequence) :
                </td>
                <td>
                     @Html.TextBox("Sequence", null, new { @class = "shortWidth" })
                     @*<input type="text" name="Sequence" size="5" value=""></input>@Html.EditorFor(model => model.Sequence)*@
                    <span class="editor-field"> @Html.ValidationMessageFor(model => model.Sequence)</span>
                </td>
            </tr>
            <tr>
            </tr>
